<% if flash[:alert] %>
	<div class="alert"><%= flash[:alert] %></div>
<% end %>

<%= form_for :task, url: tasks_path do |f| %>
	<%= f.text_field :url %>
	<%= f.submit 'Convert', :class => 'submit_button' %>
<% end %>

<% @tasks.each do |task| %>
	<p><%= task.title %> /
		<%= if task.done
				link_to 'Download', download_task_path(task), :class => 'button'
			else
				"Processing"
			end %> /
		<td><%= link_to 'Remove', task_path(task),
              method: :delete,
              data: { confirm: 'Are you sure you want to cancel this Task?' } %></td></p>
<% end %>